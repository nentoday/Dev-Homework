model Product {
  id        Int       @id @default(autoincrement())
  name      String
  category  String
  amount    Int
  price     Float
  orderedItems OrderedItem[]
}

model Customer {
  id          Int     @id @default(autoincrement())
  firstName   String
  lastName    String
  middleName  String?
  email       String  @unique
  birthDate   DateTime
}

model Employee {
  id          Int     @id @default(autoincrement())
  firstName   String
  lastName    String
  middleName  String?
  position    String
}

model Order {
  id            Int       @id @default(autoincrement())
  employeeId    Int
  customerId    Int
  orderAddress  String
  deliveryCost  Float
  orderDate     DateTime  @default(now())
  orderedItems  OrderedItem[]
}

model OrderedItem {
  orderId    Int
  productId  Int
  amount     Int
  product    Product @relation(fields: [productId], references: [id])
  order      Order   @relation(fields: [orderId], references: [id])
  @@id([orderId, productId])
}
